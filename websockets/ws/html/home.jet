
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Home</title>
</head>
<body>
	<h1>Welcome to Home - Real Time Chat</h1>
	<div style="display: flex; gap: 2rem;">
		<!-- Chat Window -->
		<div style="flex: 2; border: 1px solid #ccc; padding: 1rem; border-radius: 8px; min-width: 300px;">
			<h2>Chat</h2>
			<div id="chat-messages" style="height: 300px; overflow-y: auto; background: #f9f9f9; margin-bottom: 1rem; padding: 0.5rem; border-radius: 4px;"></div>
			<form id="chat-form" style="display: flex; gap: 0.5rem;">
				<input type="text" id="chat-input" placeholder="Type a message..." style="flex: 1; padding: 0.5rem; border-radius: 4px; border: 1px solid #ccc;">
				<button type="submit">Send</button>
			</form>
		</div>
		<!-- Online Users Window -->
		<div style="flex: 1; border: 1px solid #ccc; padding: 1rem; border-radius: 8px; min-width: 150px; background: #f4f8ff;">
			<h2>Who's Online</h2>
			<ul id="online-users" style="list-style: none; padding: 0; margin: 0;"></ul>
		</div>
	</div>
</body>
<script>
let socket = null;
document.addEventListener("DOMContentLoaded", function(){
	socket = new WebSocket("ws://127.0.0.1:8080/ws");
	socket.onopen = () => {
		console.log("successfully connected");
	};
});
</script>
</html>
